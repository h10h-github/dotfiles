[user]
  name = hiroshi
  email = sato@wiredgroup.co.jp
[color]
  ui = auto
[push]
  default = current
[core]
  excludesfile = /Users/sato_hiroshi/.gitignore_global
  editor = nvim
[merge]
  ff = false
  conflictsstyle = diff3
  tool = vimdiff
[deff]
  renames = true
[branch]
  autosetuprebase = always
[alias]
  mylog = log --graph --name-status --pretty=format:\"%C(red)%h %C(green)%an %Creset%s %C(yellow)%d%Creset\"
  ae = commit --allow-empty
  rb = rebase -i
  push-f = push --force-with-lease
[pull]
  ff = only
[filter "lfs"]
  clean = git-lfs clean %f
  smudge = git-lfs smudge %f
  required = true
[pager]
  log = diff-highlight | less
  show = diff-highlight | less
  diff = diff-highlight | less
[branch "master"]
  remote = origin
  merge = refs/heads/master
  rebase = true
[branch "develop"]
  remote = origin
  merge = refs/heads/develop
  rebase = true
[mergetool]
  path = nvim
[rebase]
  autosquash = true
