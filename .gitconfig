[user]
	name = hi0711
	email = admin@hi0711.xyz
[color]
	ui = auto
[push]
	default = current
[core]
	excludesfile = /Users/hi0711/.gitignore_global
	editor = vim
[commit]
	template = /Users/hi0711/.gitmessage.txt
[merge]
	ff = false
	conflictsstyle = diff3
[deff]
	renames = true
[branch]
	autosetuprebase = always
[alias]
	mylog = log --graph --name-status --pretty=format:\"%C(red)%h %C(green)%an %Creset%s %C(yellow)%d%Creset\"
  ae = commit --allow-empty
  rb = rebase -i --autosquash
[pull]
	ff = only
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
[pager]
	log = diff-highlight | less
	show = diff-highlight | less
	diff = diff-highlight | less
